    <destroyEffect range = "1" >
      <place name="basicWallDebris"/>
    </destroyEffect>
  </object>
  <object SCover = "0" Edge = "true" Health="5">
    <sprite  name="Environment/destroyedWall"  offset= "0,0"/>
    <name>basicWallDebris</name>
  </object>
  <object VCover = "0" SCover = "3" Edge = "true" Health="3">
    <sprite  name="Environment/glassWall"  offset= "0,0"/>
    <name>glassWall</name>
  </object>
  <object VCover="3" SCover = "0" Edge = "true" Health="6">
    <sprite  name="Environment/strawWall"  offset= "0,0"/>
    <name>strawWall</name>
  </object>
  <object VCover = "0" SCover = "3" Edge = "true" Health="1">
    <sprite  name="Environment/paperMache"  offset= "0,0"/>
    <name>paperMache</name>
  </object>
  <object SCover = "2" Edge = "true">
    <sprite  name="Environment/basicHalfWall" offset= "0,0"  Health="10"/>
    <name>basicHalfWall</name>
  </object>
  <object SCover = "1" Edge = "true">
    <sprite name="Environment/basicHalfWallLight" Health="6" offset= "0,0"/>
    <name>basicHalfWallLight</name>
  </object>
  <object VCover = "0" Faceable = "true" SCover ="3" Health="13">
    <sprite  name="Human" offset= "0,0"/>
    <name>Grunt</name>
    <controllable moveRange = "6" moves="2" determination="3">
      <defaultAttack>
        <targetAid>enemy</targetAid>
        <shootable dmg ="7" detRes="1" supression="1" supressionRange="2" dropOffRange="18"/>
        <effect>
          <vfx name="clmagnitude" target="20" speed="50"/>
          <vfx name="noise" target="0.5" speed="100"/>
          <sfx name="rifle3"/>
        </effect>
      </defaultAttack>
      <action det ="-2" mpoint="-1" apoint="-1">
        <name>Headshot</name>
        <tip>15 damage shot. Can only target targets with 0 determination. Great for punishing reckless ability usage</tip>
        <targetAid>enemy</targetAid>
        <shootable dmg ="15" detRes="15" supression="0" supressionRange="0" dropOffRange="20"/>
        <effect>
          <vfx name="clmagnitude" target="5" speed="50"/>
          <vfx name="noise" target="0.1" speed="100"/>
          <sfx name="rfile"/>
        </effect>
      </action>
    </controllable>
  </object>
  
  <object VCover = "0" Faceable = "true" SCover ="3" Health="8">
    <sprite name="Scout"  offset= "0,0"/>
    <name>Scout</name>
    <controllable moveRange = "5" moves="3" determination="3" sightrange="18">
      
      <defaultAttack>
        <targetAid>enemy</targetAid>
        <shootable dmg ="8" detRes="1" supression="1" supressionRange="1" dropOffRange="6"/>
        <effect>
          <vfx name="clmagnitude" target="20" speed="50"/>
          <vfx name="noise" target="1" speed="100"/>
          <sfx name="shotgun"/>
        </effect>
      </defaultAttack>

      <action immideate="true" det ="-3" mpoint="5[set]" apoint="1[set]">
       <name>Breach n Clear</name>
        <tip>Restores actions points and gives 5 movement points with short range. Great for covering lots of ground and maneuvering in close quarters</tip>
        <effect visible ="false">
          <applystatus status="BreachnClear" duration="1"/>
        </effect>
      </action>
      
    </controllable>
  </object>
  
  <object VCover = "0" Faceable = "true" SCover ="3" Health="16">
    <sprite name="Heavy"  offset= "0,0"/>
    <name>Heavy</name>
    <controllable moveRange = "3" moves="2" actions="2"  overwatch="3" determination="5">
      
      <spawneffect>
        <applystatus status="Holstered"/>
      </spawneffect>
      
      <defaultAttack>
        <targetAid>enemy</targetAid>
        <shootable dmg ="6" detRes="1" supression="1" supressionRange="3" dropOffRange="12"/>
        <effect>
          <vfx name="clmagnitude" target="20" speed="50"/>
          <vfx name="noise" target="0.5" speed="100"/>
          <sfx name="mg"/>
        </effect>
      </defaultAttack>
      
      <action det ="-3" mpoint="-1" apoint="-2">
        <name>Suppress</name>
        <tip>Shoot multiple shots int a dense area. Great for suppressing groups of enemies and punishing predictable plays</tip>
        <shootable dmg ="4" detRes="1" supression="1" supressionRange="3" dropOffRange="12"/>
        <shootable offset ="2,0" dmg ="2" detRes="1" supression="1" supressionRange="3" dropOffRange="12"/>
        <shootable offset ="-2,0" dmg ="2" detRes="1" supression="1" supressionRange="3" dropOffRange="12"/>
        <shootable offset ="0,2" dmg ="2" detRes="1" supression="1" supressionRange="3" dropOffRange="12"/>
        <shootable offset ="0,-2" dmg ="2" detRes="1" supression="1" supressionRange="3" dropOffRange="12"/>
        <effect visible ="true">
          <vfx name="clmagnitude" target="5" speed="50"/>
          <vfx name="noise" target="0.1" speed="100"/>
          <sfx name="mg"/>
        </effect>
      </action>
     
      <toggleaction>
        <toggleoff  det ="-1" mpoint="0" apoint="0">
          <name>Holster</name>
          <tip>Switch to mobility mode. Starts every turn with 4 move points</tip>
          <effect visible ="false">
           <applystatus status="Holstered"/>
          </effect>
        </toggleoff>
        <toggleon name="" tip="" det ="-1" mpoint="-2" apoint="0">
          <name>UnHolster</name>
          <tip>Switch to attack mode. Starts every turn with 2 move points and 2 action points. Use once in a good position to be able to attack</tip>
          <effect visible ="false">
          <removestatus status="Holstered"/>
          </effect>
        </toggleon>
      </toggleaction>
      
    </controllable>
  </object>
  
  <object VCover = "0" Faceable = "true" SCover ="3" Health="8">
    <sprite name="Officer"  offset= "0,0"/>
    <name>Officer</name>
    <controllable moveRange = "4" moves="3" actions="3" determination="2"  sightrange="20">

      <defaultAttack>
        <targetAid>enemy</targetAid>
        <shootable dmg ="6" detRes="1" supression="1" supressionRange="2" dropOffRange="12"/>
        <effect>
          <vfx name="clmagnitude" target="20" speed="50"/>
          <vfx name="noise" target="1" speed="100"/>
          <sfx name="rifle"/>
        </effect>
      </defaultAttack>

      <action immideate="true" det ="-2" mpoint="0" apoint="0">
        <name>Rally</name>
        <tip>All nearby friendlies stop panicking and gain full determiation</tip>
        <effect visible ="false" los="true" range = "7" exRange="1" target="friend" ignore="Officer">
          <damage det="-100"/>
        </effect>
      </action>

      <action det ="-1" mpoint="-1" apoint="-1">
        <name>Command</name>
        <tip>Give a targeted unit 2 determination, 1 action point and 1 move point</tip>
        <vissionCast range="22"/>
        <effect range="1" visible ="false" target="friend">
          <applystatus status="Boost" duration="1"/>
        </effect>
      </action>
      
      //battlefield execution
      
    </controllable>
  </object>

  <object VCover = "0" Faceable = "true" SCover ="3" Health="10">
    <sprite name="Specialist"  offset= "0,0"/>
    <name>Specialist</name>
    <controllable moveRange = "4" inventory="5"  moves="3" actions="1" determination="2">

      <defaultAttack>
        <targetAid>enemy</targetAid>
        <shootable dmg ="6" detRes="1" supression="1" supressionRange="2" dropOffRange="9"/>
        <effect>
          <vfx name="clmagnitude" target="20" speed="50"/>
          <vfx name="noise" target="1" speed="100"/>
          <sfx name="rifle"/>
        </effect>
      </defaultAttack>

      <action det ="-1" mpoint="-1" apoint="-1">
        <name>Resupply</name>
        <tip>Give a targeted unit their last used item back</tip>
        <targetAid>unit</targetAid>
        <throwable throwRange="3" targetAid="unit"/>
        <effect range="1" visible ="false" target="friend">
          <giveItem item="{target.LastItem.Name}"/>
        </effect>
      </action>
      <action  det ="-1" mpoint="-1" apoint="-1">
        <name>Resupply</name>
        <tip>Give a targeted unit item currently equipped by this unit</tip>
        <targetAid>unit</targetAid>
        <throwable throwRange="3"/>
        <effect range="1" visible ="false" target="friend">
          <giveItem item="{this.SelectedItem.Name}"/>
        </effect>
      </action>
      

    </controllable>
  </object>
 
  <statuseffect>
    <name>Holstered</name>
    <effect visible="false">
     <values act ="[set]0" move="2"/>
    </effect>
  </statuseffect>
  <statuseffect>
    <name>BreachnClear</name>
    <effect visible="false">
      <values act ="0" move="0" moveRange="-3"/>
    </effect>
  </statuseffect>
  <statuseffect>
    <name>Boost</name>
    <effect visible="false">
      <damage det="-2"/>
      <values act ="1[cap]" move="1[cap]" moveRange="0"/>
    </effect>
  </statuseffect>
  
  
  <object VCover = "0" Faceable = "false" SCover ="0" lifetime ="2">
    <sprite name="Environment/satchel"  offset= "0,0"/>
    <name>Satchel</name>
    <destroyEffect range = "2" >
      <damage det="1" dmg="15"/>
      <vfx name="tintR" target="5" speed="50"/>
      <vfx name="clmagnitude" target="100" speed="50"/>
      <vfx name="noise" target="3" speed="60"/>
      <sfx name="grenade"/>
      <place name="Crater"/>
    </destroyEffect>
  </object>


  <object VCover = "0" Faceable = "false" SCover ="0">
    <sprite name="Environment/crater"  offset= "0,0"/>
    <name>Crater</name>
  </object>
  
  
  <object VCover = "+5" Faceable = "false" SCover ="0" lifetime ="5">
    <sprite name="Environment/Smoke"  offset= "0,0"/>
    <name>Smoke</name>
  </object>

  <item>
    <name>Satchel Charge</name>
    <tip>Blows up after 1 turn dealing huge damage. Best for destroying enviroment</tip>
    <throwable throwRange="4"/>
    <effect visible ="false" range="1">
      <place name="Satchel"/>
    </effect>
  </item>
  <item>
    <name>Frag</name>
    <tip>Damages units in effect area</tip>
    <throwable throwRange="6"/>
    <effect range="3">
      <damage det="1" dmg="5"/>
      <vfx name="tintR" target="5" speed="50"/>
      <vfx name="tintG" target="5" speed="50"/>
      <vfx name="clmagnitude" target="100" speed="50"/>
      <vfx name="noise" target="2" speed="50"/>
      <sfx name="grenade"/>
      <place name="Crater"/>
    </effect>
  </item>

  <item>
    <name>Flash</name>
    <tip>Immideately panics units in effect radius</tip>
    <throwable throwRange="6"/>
    <effect range="3">
      <damage det="100" dmg="0"/>
      <vfx name="tintR" target="20" speed="50"/>
      <vfx name="tintG" target="20" speed="50"/>
      <vfx name="tintB" target="20" speed="50"/>
      <vfx name="clmagnitude" target="50" speed="50"/>
      <vfx name="noise" target="1" speed="50"/>
      <sfx name="bang"/>
    </effect>
  </item>

  <item>
    <name>Smoke</name>
    <tip>Blocks line of sight</tip>
    <throwable throwRange="7"/>
    <effect range="3">
      <place name="Smoke"/>
      <vfx name="clmagnitude" target="100" speed="40"/>
      <vfx name="noise" target="0.5" speed="50"/>
      <sfx name="smoke"/>
    </effect>
  </item>

</root>