        </consequences>
      </effect>
    </action>
  </unit>

  <unit health="8" z="0.1" moveRange = "6" moves="2" actions="1" determination="3"  sightrange="20">
    <name>Officer</name>

    <action moveCost="1" actCost="1" overwatch="2">
      <name>Attack</name>
      <targetAid>enemy</targetAid>

      <shoot dmg ="6" detRes="1" supression="1" supressionRange="2" dropOffRange="12"/>

      <effect>
        <consequences>
          <vfx name="clmagnitude" target="20" speed="50"/>
          <vfx name="noise" target="0.5" speed="100"/>
          <sfx name="rifle"/>
        </consequences>
      </effect>

    </action>

    <action immideate="true" detCost ="2" moveCost="0" actCost="0" aiExempt="false">
      <name>Rally</name>
      <tip>All nearby friendlies stop panicking and gain full determiation</tip>

      <effect>
        <consequences visible ="false"  range = "7" exRange="1" target="friend" ignore="Officer">
          <damage det="-100"/>
        </consequences>
      </effect>
    </action>

    <action detCost ="1" moveCost="1" actCost="0">
      <name>Command</name>
      <tip>Give a targeted 1 action point and 1 move point</tip>
      <targetAid>friend,!Officer</targetAid>

      <effect range="1" visible ="false">
        <delivery>
          <vissionCast range="18"/>
        </delivery>
        <consequences ignore="Officer"  range="1">
          <applystatus status="Boost" duration="1"/>
        </consequences>
      </effect>
    </action>

    <action detCost ="0" moveCost="0" actCost="1">
      <name>Smoke Launcher</name>
