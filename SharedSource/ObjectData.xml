  <unit health="13" moveRange = "6" moves="2" determination="3" z="0.1">
    <name>Grunt</name>
    <action moveCost="1" actCost="1" overwatch="2">
      <name>Attack</name>
      <targetAid>enemy</targetAid>

      <shoot dmg ="7" detRes="1" supression="1" supressionRange="2" dropOffRange="18"/>

      <effect>
        <consequences>
          <vfx name="clmagnitude" target="20" speed="50"/>
          <vfx name="noise" target="0.5" speed="100"/>
          <sfx name="rifle3"/>
        </consequences>
      </effect>
    </action>

    <action detCost ="3" moveCost="1" actCost="1" overwatch="2">
      <name>Headshot</name>
      <tip>15 damage shot. Can only target targets with 0 determination. Great for punishing reckless ability usage</tip>
      <targetAid>enemy</targetAid>

      <shoot dmg ="15" detRes="15" supression="0" supressionRange="0" dropOffRange="20"/>

      <effect>
        <consequences>
          <vfx name="clmagnitude" target="20" speed="50"/>
          <vfx name="noise" target="0.1" speed="100"/>
          <sfx name="rifle"/>
        </consequences>
      </effect>
    </action>
  </unit>

  <unit health="8" moveRange = "5" moves="3" determination="3" sightrange="18">
    <name>Scout</name>

    <action moveCost="1" actCost="1" overwatch="2">
