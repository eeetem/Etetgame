<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
      <DefineConstants>TRACECOREAPP;SERVER;COREAPP</DefineConstants>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
      <DefineConstants>TRACECOREAPP;SERVER;COREAPP</DefineConstants>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="MonoGame.Extended" Version="3.8.0" />
      <PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.0.1641" />
      <PackageReference Include="Network" Version="6.2.5.23" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="ServerSource\Systems" />
    </ItemGroup>

    <ItemGroup>
      <Compile Include="..\MonoGameCross-PlatformDesktopApplication\SharedSource\Components\WorldObject.cs">
        <Link>SharedSource\Components\WorldObject.cs</Link>
      </Compile>
      <Compile Include="..\MonoGameCross-PlatformDesktopApplication\SharedSource\Systems\WorldObjectManager.cs">
        <Link>SharedSource\Systems\WorldObjectManager.cs</Link>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\MonoGameCross-PlatformDesktopApplication\ObjectData.xml">
        <Link>ObjectData.xml</Link>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <None Update="map.mapdata">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

</Project>
